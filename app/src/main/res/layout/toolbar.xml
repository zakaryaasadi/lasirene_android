<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:elevation="2dp"
    android:background="@color/black_opacity"
    android:paddingTop="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="17dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="@drawable/ic_menu_white" />

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3.7sp"
            android:text=" Technology"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:maxLines="1"/>

        <RelativeLayout
            android:id="@+id/cart"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_shopping_cart_white" />

            <ImageView
                android:id="@+id/dot_cart"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-4dp"
                android:visibility="gone"
                android:src="@drawable/ic_dot_white" />

        </RelativeLayout>


    </LinearLayout>

</androidx.appcompat.widget.Toolbar>